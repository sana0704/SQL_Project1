-- CREATING DATABSE NAME HOSPITAL
create database Hospital;

use Hospital;

-- CREATE TABLE DOCTOR
create table Doctor(
id int Primary key,
name varchar(50),
email varchar(50),
specialization varchar(30),
experience int,
phone int
);

alter table Doctor
modify phone varchar(30) not null;

insert into Doctor (id,name,email,specialization,experience,phone)Values
